<%= render "groups/budget" %>
<div class="d-flex flex-column justify-content-center align-items-center m-3 pt-3">
  <div class="card d-flex flex-column justify-content-center align-items-center m-3 pt-3" style="width: 18rem;">
    <div>
    <% if @group.icon %>
    <span class="material-symbols-outlined img">
      <%= @group.icon %>
      </span>
  </div>
  <% end %>
  <div class="card-body d-flex flex-column justify-content-center align-items-center">
    <h5 class="card-title badge text-bg-warning p-2 px-4"><%= @group.name %></h5>
    <p class="card-text">Total Amount Allotted: $ <%= @group.budgets.sum(:amount) %></p>
    <h3>
      <% link_to "Show", group_path(id: @group.id), class: "btn btn-primary" %>
    </h3>
  </div>
</div>
<%= link_to "Add New Budget", new_group_path, class: "btn btn-success mb-5" %>
<h1>All Allotted Budgets</h1>

<% if @group.budgets.any? %>
    <%= render partial: 'budgets/budget_card', locals: { group: @group } %>
<% end %>