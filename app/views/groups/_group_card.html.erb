<div class="card d-flex flex-column justify-content-center align-items-center m-3 pt-3" style="width: 18rem;">
  <div>
    <% if group.icon %>
    <span class="material-symbols-outlined img">
      <%= group.icon %>
      </span>
  </div>
  <% end %>
  <div class="card-body d-flex flex-column justify-content-center align-items-center">
    <h5 class="card-title badge text-bg-warning p-2 px-4"><%= group.name %></h5>
    <p class="card-text">Total Amount of Budget: </p>
    <h3>
      <% link_to "Show", group_path(id: group.id), class: "btn btn-primary" %>
    </h3>
    <a href="/groups/<%= group.id %>" class="btn btn-success">SELECT</a>
  </div>
</div>